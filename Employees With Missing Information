SELECT emp_details.employee_id FROM ((SELECT e.employee_id,name,salary FROM Employees AS e LEFT OUTER JOIN Salaries AS s ON  e.employee_id=s.employee_id) UNION (SELECT s.employee_id,name,salary FROM Employees AS e RIGHT OUTER JOIN Salaries AS s ON  e.employee_id=s.employee_id)) AS emp_details WHERE emp_details.name IS NULL OR emp_details.salary IS NULL ORDER BY emp_details.employee_id;
